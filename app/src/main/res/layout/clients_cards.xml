<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clientsCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="2dp">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/client_list_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/client_list_thumbnail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/map_icon" />

        <TextView
            android:id="@+id/client_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/client_list_thumbnail"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="NAME" />

        <TextView
            android:id="@+id/client_list_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/client_list_name"
            app:layout_constraintTop_toBottomOf="@+id/client_list_name"
            tools:text="Adress" />

        <TextView
            android:id="@+id/client_list_zipAndCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/client_list_address"
            app:layout_constraintTop_toBottomOf="@+id/client_list_address"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Zip and City" />

        <TextView
            android:id="@+id/DeliveryDateField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/deliveryDateField"
            app:layout_constraintBottom_toTopOf="@+id/client_list_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/client_list_name"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/client_list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAllCaps="true"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/client_list_zipAndCity"
            app:layout_constraintEnd_toEndOf="@+id/DeliveryDateField"
            app:layout_constraintStart_toStartOf="@+id/DeliveryDateField"
            app:layout_constraintTop_toBottomOf="@+id/DeliveryDateField"
            app:layout_constraintVertical_bias="0.0"
            tools:text="DATE" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>